{
  "name": "rust-mod-creator",
  "publisher": "AshSmith",
  "displayName": "rust-mod-creator",
  "description": "Easily create Rust modules and submodules in VS Code",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ashintosh/rust-mod-creator"
  },
  "icon": "images/icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rust-mod-creator.createModuleOrSubmodule",
        "title": "New Rust (Sub)module"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "rust-mod-creator.createModuleOrSubmodule",
          "when": "resourceLangId == rust || explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Rust Mod Creator",
      "properties": {
        "rustModeCreator.autoFocus": {
          "type": "boolean",
          "default": true,
          "description": "Automatically focus the newly created module file in the editor."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
