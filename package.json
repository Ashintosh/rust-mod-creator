{
  "name": "rust-mod-creator",
  "publisher": "AshSmith",
  "author": "Ashintosh",
  "displayName": "Rust Mod Creator",
  "description": "Easily create Rust modules and submodules in VS Code",
  "version": "0.0.3",
  "type": "module",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ashintosh/rust-mod-creator"
  },
  "icon": "images/icon.png",
  "activationEvents": [
    "workspaceContains:**/Cargo.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rust-mod-creator.createModuleOrSubmodule",
        "title": "New Rust Module"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "rust-mod-creator.createModuleOrSubmodule",
          "when": "resourceLangId == rust || rust-mod-creator.thisContext",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Rust Mod Creator",
      "properties": {
        "rustModCreator.autoFocus": {
          "type": "boolean",
          "default": true,
          "description": "Automatically focus the newly created module file in the editor."
        },
        "rustModCreator.showSuccessMessage": {
          "type": "boolean",
          "default": true,
          "description": "Shows message that a new module was created."
        },
        "rustModCreator.visibilityOptions": {
          "type": "array",
          "description": "Chose what visibility options show when creating a module.",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "description": "The label for the visibility option."
              },
              "description": {
                "type": "string",
                "description": "The description shown in the picker."
              }
            },
            "required": ["label", "description"]
          },
          "default": [
            { "label": "pub", "description": "Visible to the entire crate" },
            { "label": "pub(super)", "description": "Visible to the parent module" },
            { "label": "pub(crate)", "description": "Visible only within the crate" },
            { "label": "private", "description": "Visible only within this module" }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
